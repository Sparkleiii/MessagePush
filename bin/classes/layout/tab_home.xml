<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".DemoAppActivity"
                android:background="@color/background"
>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:layout_weight="1"

    >
        <org.androidpn.view.RefreshableView
                android:id="@+id/refreshable_infor_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
            <ListView android:id="@+id/list_view_information"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:divider="@color/font_gray_b"
                      android:dividerHeight="5dp"
            >
            </ListView>
    </org.androidpn.view.RefreshableView>

    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <TextView android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:text="@string/tag"
                  android:gravity="center"
                  android:background="@drawable/input_blue_background"
        />
        <EditText
                android:id="@+id/et_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="16"
                android:background="@drawable/input_blue_background"

        />
        <Button
                android:id="@+id/btn_filter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/icon_filter"
                android:drawablePadding="5dp"
                android:text="@string/filter"
                android:background="@drawable/btn_round_transparent"
        />
    </LinearLayout>
</LinearLayout>