<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="@color/background"
              android:orientation="vertical"
>
    <include layout="@layout/history_top"></include>



    <ScrollView android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
    >

        <!-- 目标院校 -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:background="@drawable/input_blue_background"
                >
            <TextView
                    android:id="@+id/tv_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/targetSchool"
                    android:textSize="20sp"
            />
            <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/gray" />
            <EditText
                    android:id="@+id/et_school"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:background="@drawable/white_input_background"
                     />
        </LinearLayout>

        <!-- 专业 -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_blue_background"
        >
            <TextView
                    android:id="@+id/tv_major"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/major"
                    android:textSize="20sp"
            />
            <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/gray" />
            <EditText
                    android:id="@+id/et_major"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:background="@drawable/white_input_background"
            />
        </LinearLayout>

        <!-- 考试科目 英语-->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_blue_background"
        >
            <TextView
                    android:id="@+id/tv_english_type"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/english"
                    android:textSize="20sp"
            />
            <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/gray"/>
            <Spinner
                    android:id="@+id/spinner_english_type"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/white_input_background"
                    android:entries="@array/english_type"
            >
            </Spinner>
        </LinearLayout>

        <!-- 专业课一 -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:background="@drawable/input_blue_background"
        >
            <TextView
                    android:id="@+id/tv_professional_course1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/professional_course1"
                    android:textSize="20sp"
            />
            <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/gray" />
            <EditText
                    android:id="@+id/professional_course1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:hint="@string/professional_course_tip"
                    android:background="@drawable/white_input_background"
            />
        </LinearLayout>

        <!-- 专业课二 -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_blue_background"
        >
            <TextView
                    android:id="@+id/tv_professional_course2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/professional_course2"
                    android:textSize="20sp"
            />
            <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/gray" />
            <EditText
                    android:id="@+id/professional_course2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:hint="@string/professional_course_tip"
                    android:background="@drawable/white_input_background"
            />
        </LinearLayout>
        <!-- 考试方式 -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/input_blue_background"
        >
            <TextView
                    android:id="@+id/tv_exam_type"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/exam_type"
                    android:textSize="20sp"
            />
            <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/gray"/>
            <Spinner
                    android:id="@+id/spinner_exam_type"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/white_input_background"
                    android:entries="@array/exam_type"
            >
            </Spinner>
        </LinearLayout>

         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
         >
             <Button
                     android:id="@+id/btn_submit"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@drawable/btn_round"
                     android:textSize="20dp"
                     android:text="@string/submit"
             />
         </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>