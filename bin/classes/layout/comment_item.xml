<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:descendantFocusability="blocksDescendants"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
        <!--头像-->
        <ImageView
                android:id="@+id/iv_comment_portrait"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_portrait2"
                android:contentDescription="portrait"/>
        <!--右侧-->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <!--昵称-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp">
                <!--昵称-->
                <TextView
                        android:id="@+id/tv_comment_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:text="1314****0201"
                        android:textColor="@color/black"
                        android:textSize="16dp"/>
                <!--回复两字-->
                <TextView
                        android:id="@+id/iam_tv_huifu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/comment"
                        android:textColor="@color/black"
                        android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp">
                <!--性别-->
                <ImageView
                        android:id="@+id/iam_iv_sex"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_user"
                />
                <!--位置-->
                <TextView
                        android:id="@+id/comment_tv_local"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:text="上海电力学院"
                        android:textColor="#c6c4c4"
                        android:textSize="12dp"/>
            </LinearLayout>
            <!--评论内容-->
            <TextView
                    android:id="@+id/tv_comment_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:maxLines="3"
                    android:minLines="1"
                    android:text="呀呀呀呀呀，真不错"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>
            <!--评论时间-->
            <TextView
                    android:id="@+id/tv_comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:text="2018-04-26 11:56:36"
                    android:textColor="#c6c4c4"
                    android:textSize="12dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
